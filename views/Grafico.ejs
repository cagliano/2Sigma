    let ctx = document.querySelector('#Grafico2Sigma').getContext('2d');


    var barChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: [<%= Orario %> ],
        datasets: [{
          label: "2Sigma",
          data: [ <%= Sigma %>   ]
        }]
      },

      options: {
        legend: {
          display: false
        },
        plugins: {
